@model IEnumerable<mvc.framework.Areas.Book.Models.Entity.Category>
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_LayoutWithLeftMenu.cshtml";
}

<h2>Categories</h2>
<a asp-action="Create" class="btn btn-primary mb-2">Create New Category</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Created</th>
            <th>Modified</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CreatedDate.ToString("g") by @item.CreatedBy</td>
                <td>@item.ModifiedDate?.ToString("g") by @item.ModifiedBy</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
